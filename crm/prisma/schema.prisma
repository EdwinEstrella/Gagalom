// This is your Prisma schema file for the CRM,
// using the same database as the main app

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// NextAuth Models - CRM authentication
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("crm_accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("crm_sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("crm_verification_tokens")
}

// ============================================
// Main App Models (read-only access for CRM)
// ============================================

// Modelo de Usuario (del app principal)
model User {
  id                Int       @id @default(autoincrement())
  email             String    @unique
  passwordHash      String    @map("password_hash")
  firstName         String?   @map("first_name")
  lastName          String?   @map("last_name")
  gender            String?
  ageRange          String?   @map("age_range")
  role              String    @default("customer") // customer, seller, admin
  stripeCustomerId  String?   @map("stripe_customer_id")
  isActive          Boolean   @default(true) @map("is_active")
  lastLogin         DateTime? @map("last_login")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  // Relaciones NextAuth
  accounts          Account[]
  sessions          Session[]

  // Relaciones App Principal
  refreshTokens     RefreshToken[]
  orders            Order[]
  products          Product[]
  sellerRequests    SellerRequest[]

  @@map("users")
}

// Tokens de refresco para JWT (solo lectura)
model RefreshToken {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  token     String
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  // Relaciones
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

// Productos (solo lectura)
model Product {
  id             Int       @id @default(autoincrement())
  sellerId       Int?      @map("seller_id")
  name           String
  description    String?   @db.Text
  price          Decimal   @db.Decimal(10, 2)
  category       String
  imageUrl       String?   @map("image_url")
  localAssetPath String?   @map("local_asset_path")
  stock          Int       @default(0)
  isActive        Boolean   @default(true) @map("is_active")
  stripePriceId  String?   @map("stripe_price_id")
  views          Int       @default(0)
  salesCount     Int       @default(0) @map("sales_count")
  rating         Decimal   @default(0) @db.Decimal(3, 2)
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  // Relaciones
  seller         User?     @relation(fields: [sellerId], references: [id], onDelete: SetNull)
  orderItems     OrderItem[]

  @@index([sellerId])
  @@index([category])
  @@index([isActive])
  @@map("products")
}

// Solicitudes de vendedor (solo lectura)
model SellerRequest {
  id                  Int       @id @default(autoincrement())
  userId              Int       @map("user_id")
  businessName        String    @map("business_name")
  businessDescription String?   @map("business_description") @db.Text
  businessType        String?   @map("business_type")
  taxId               String?   @map("tax_id")
  phone               String?
  address             String?   @db.Text
  city                String?
  country             String    @default("España")
  status              String    @default("pending")
  rejectionReason     String?   @map("rejection_reason") @db.Text
  reviewedBy          Int?      @map("reviewed_by")
  reviewedAt          DateTime? @map("reviewed_at")
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")

  // Relaciones
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@map("seller_requests")
}

// Órdenes de compra (solo lectura)
model Order {
  id                   Int          @id @default(autoincrement())
  userId               Int          @map("user_id")
  stripePaymentIntentId String?     @unique @map("stripe_payment_intent_id")
  totalAmount          Decimal      @map("total_amount") @db.Decimal(10, 2)
  status               String       @default("pending")
  shippingAddress      String?      @map("shipping_address") @db.Text
  createdAt            DateTime     @default(now()) @map("created_at")
  updatedAt            DateTime     @updatedAt @map("updated_at")

  // Relaciones
  user                 User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  items                OrderItem[]

  @@index([userId])
  @@index([stripePaymentIntentId])
  @@map("orders")
}

// Items de una orden (solo lectura)
model OrderItem {
  id          Int      @id @default(autoincrement())
  orderId     Int      @map("order_id")
  productId   Int      @map("product_id")
  quantity    Int
  priceAtTime Decimal  @map("price_at_time") @db.Decimal(10, 2)

  // Relaciones
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@map("order_items")
}
